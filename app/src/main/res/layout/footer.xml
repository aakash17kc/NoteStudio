<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/border"
              android:focusableInTouchMode="true"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:focusableInTouchMode="true"
    >
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:id="@+id/typenote"
                android:text="@string/type_new_note"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:paddingLeft="20dp"
      />

        <ImageView android:layout_width="0dp" android:layout_height="45dp"
                   android:src="@drawable/outline_check_box_black_36"
                   android:layout_weight="1"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   android:id="@+id/listnote" />

        <ImageView android:layout_width="0dp" android:layout_height="45dp"
                   android:src="@drawable/outline_mic_none_black_36"
                   android:layout_weight="1"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   android:id="@+id/voicenote" />
        <ImageView android:layout_width="0dp" android:layout_height="45dp"
                   android:src="@drawable/outline_photo_black_36"
                   android:layout_weight="1"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp"
                   android:id="@+id/imagenote" />
    </LinearLayout>


</LinearLayout>